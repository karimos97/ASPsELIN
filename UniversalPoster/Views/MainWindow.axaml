<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UniversalPoster.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UniversalPoster.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="UniversalPoster">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <DockPanel>
      <Menu Padding="5 0 0 0" Background="#DDD" DockPanel.Dock="Top">
        <MenuItem Header="_Data">
          <MenuItem Header="_Accounts" Command="{Binding OpenAccountView}"/>
          <MenuItem Header="_Groups" Command="{Binding OpenGroupView}"/>
          <MenuItem Header="_Posts" Command="{Binding OpenPostView}"/>
        </MenuItem>
        <MenuItem Header="_Operation">
          <MenuItem Header="_Post" Command="{Binding OpenOperationView}"/>
        </MenuItem>
      </Menu>
    <UserControl Content="{Binding Content}"/>
  </DockPanel>
</Window>
